<p id="notice"><%= notice %></p>
<%= search_form_for @q do |f|%>
<%= f.label :nome_cont %>
<%= f.search_field :nome_or_author_nome_cont %>
<%= f.submit %>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Author</th>
      <th>Category</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.nome %></td>
        <td><%= book.author.nome %></td>
        <td><%= book.category.nome %></td>
        <td><%= book.stock %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
